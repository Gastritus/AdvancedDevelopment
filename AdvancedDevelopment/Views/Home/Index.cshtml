@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron text-center home-intro">
    <h1 class="display-4">Welcome to Our Exclusive Shoe Store!</h1>
    <p class="lead">Discover the style that fits your pace, with our wide range of high-quality footwear.</p>
    <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Product")" role="button">Start Shopping</a>
</div>

<div class="container">
    <!-- Carousel for Featured Products -->
    <div id="featuredProductsCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/featured1.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Season's Top Picks</h5>
                    <p>Explore our best-selling products this season.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/featured2.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>New Arrivals</h5>
                    <p>Check out the latest trends from your favorite brands.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/featured3.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Exclusive Offers</h5>
                    <p>Don't miss out on our exclusive online deals.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#featuredProductsCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#featuredProductsCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

